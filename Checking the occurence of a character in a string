public class Main {

    public static void main(String[] args) {
	  String input = "character";
        char[] array = input.toCharArray();//for easily comparing character with char array
        char choice = 'h';


        int b = 0;
        for (int i = 0; i < array.length; i++) {
            if (choice == array[i]) {
                b++;
                continue;
            } else
                continue;
    }
}
